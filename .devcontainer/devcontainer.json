{
  "name": "Agentic Workflows Development",
  "image": "mcr.microsoft.com/devcontainers/universal:latest",
  "customizations": {
    "vscode": {
      "extensions": [
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "redhat.vscode-yaml",
        "DavidAnson.vscode-markdownlint",
        "github.vscode-github-actions",
        "GitHub.vscode-pull-request-github",
        "michelemelluso.gitignore"
      ]
    },
    "codespaces": {
      "repositories": {
        "nathlan/shared-assets": {
          "permissions": {
            "actions": "write",
            "contents": "write",
            "discussions": "read",
            "issues": "read",
            "pull-requests": "write",
            "workflows": "write"
          }
        }
      }
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/git:1": {
    },
    "ghcr.io/devcontainers/features/github-cli:1": {
    },
    "ghcr.io/devcontainers/features/copilot-cli:1": {
    },
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },
  "postCreateCommand": "chmod +x .devcontainer/gh-aw-login.sh && sudo apt-get update && sudo apt-get install -y xdg-utils && curl -fsSL https://raw.githubusercontent.com/github/gh-aw/refs/heads/main/install-gh-aw.sh | bash",
  "postAttachCommand": ".devcontainer/gh-aw-login.sh"
}